@page "/"
@page "/home"
@inject NavigationManager Navigation

<PageTitle>PoLearnCert - Certification Quiz Platform</PageTitle>

<div class="home-container">
    <div class="hero-section">
        <h1>PoLearnCert</h1>
        <p class="tagline">Certification Exam Practice Platform</p>
        
        <AuthorizeView>
            <Authorized>
                <p class="welcome-message">Welcome, @context.User.Identity?.Name!</p>
                <div class="cta-buttons">
                    <a href="/quiz" class="btn btn-primary">Start Quiz</a>
                    <a href="/statistics" class="btn btn-secondary">View Statistics</a>
                </div>
            </Authorized>
            <NotAuthorized>
                <p class="auth-prompt">Please log in or register to start practicing</p>
                <div class="cta-buttons">
                    <a href="/login" class="btn btn-primary">Login</a>
                    <a href="/register" class="btn btn-success">Register</a>
                    <a href="/statistics" class="btn btn-secondary">View Statistics</a>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <div class="certifications-section">
        <h2>Available Certifications</h2>
        <div class="cert-grid">
            <div class="cert-card">
                <div class="cert-icon">☁️</div>
                <h3>Microsoft AZ-900</h3>
                <p>Azure Fundamentals</p>
                <span class="question-count">200+ Questions</span>
            </div>
            <div class="cert-card">
                <div class="cert-icon">🔒</div>
                <h3>CompTIA Security+</h3>
                <p>Security Fundamentals</p>
                <span class="question-count">200+ Questions</span>
            </div>
        </div>
    </div>
</div>

<style>
    .home-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .hero-section {
        text-align: center;
        padding: 3rem 2rem;
        margin-bottom: 3rem;
    }

    .hero-section h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .tagline {
        font-size: 1.1rem;
        color: #7f8c8d;
        margin-bottom: 1rem;
        font-weight: 400;
    }

    .welcome-message {
        font-size: 1.1rem;
        color: #27ae60;
        margin-bottom: 1.5rem;
        font-weight: 500;
    }

    .auth-prompt {
        font-size: 1rem;
        color: #7f8c8d;
        margin-bottom: 1.5rem;
        font-weight: 400;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
        border-radius: 6px;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background: #3498db;
        color: white;
    }

    .btn-primary:hover {
        background: #2980b9;
        transform: translateY(-1px);
    }

    .btn-success {
        background: #27ae60;
        color: white;
    }

    .btn-success:hover {
        background: #229954;
        transform: translateY(-1px);
    }

    .btn-secondary {
        background: #ecf0f1;
        color: #2c3e50;
    }

    .btn-secondary:hover {
        background: #d5dbdb;
        transform: translateY(-1px);
    }

    .certifications-section h2 {
        text-align: center;
        font-size: 1.5rem;
        margin-bottom: 2rem;
        color: #2c3e50;
        font-weight: 600;
    }

    .cert-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin: 0 auto;
    }

    .cert-card {
        background: white;
        border: 1px solid #e1e8ed;
        border-radius: 8px;
        padding: 2rem;
        text-align: center;
        transition: all 0.2s ease;
    }

    .cert-card:hover {
        border-color: #3498db;
        box-shadow: 0 4px 12px rgba(52, 152, 219, 0.1);
        transform: translateY(-2px);
    }

    .cert-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .cert-card h3 {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        color: #2c3e50;
        font-weight: 600;
    }

    .cert-card p {
        color: #7f8c8d;
        margin-bottom: 1rem;
        font-size: 0.95rem;
    }

    .question-count {
        display: inline-block;
        background: #ecf0f1;
        color: #7f8c8d;
        padding: 0.25rem 0.75rem;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    /* Mobile responsiveness */
    @@media (max-width: 768px) {
        .hero-section {
            padding: 2rem 1rem;
        }

        .hero-section h1 {
            font-size: 2rem;
        }

        .tagline {
            font-size: 1rem;
        }

        .cert-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
