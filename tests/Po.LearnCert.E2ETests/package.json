{
  "name": "po-learncert-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for PoLearnCert using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:statistics": "playwright test tests/statistics.spec.ts",
    "test:quiz": "playwright test tests/quiz.spec.ts"
  },
  "keywords": ["e2e", "playwright", "typescript", "testing"],
  "author": "PoLearnCert Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  }
}